# Checkly Configuration
CHECKLY_API_KEY=your_checkly_api_key_here
CHECKLY_ACCOUNT_ID=your_checkly_account_id_here

# Application URLs
PRODUCTION_URL=https://your-coffee-shop.com
API_URL=https://api.your-coffee-shop.com

# Test Data
TEST_EMAIL=test@example.com
TEST_COUPON_CODE=WELCOME10

# Environment
NODE_ENV=production

# Checkly Settings
CHECKLY_RUN_LOCATION=us-east-1
CHECKLY_PRIVATE_LOCATION_SLUG=your-private-location

# Notification Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key

# Performance Thresholds (in milliseconds)
MAX_RESPONSE_TIME=3000
MAX_PAGE_LOAD_TIME=5000
MAX_API_RESPONSE_TIME=2000

# Retry Configuration
MAX_RETRIES=3
RETRY_INTERVAL=30000

# Geographic Locations for monitoring
MONITORING_LOCATIONS=us-east-1,eu-west-1,ap-southeast-1
