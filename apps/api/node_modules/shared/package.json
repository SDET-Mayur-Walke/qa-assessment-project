{
  "name": "qa-assessment",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "scripts": {
    "dev": "pnpm -w run dev:all",
    "dev:all": "concurrently -n api,web -c blue,green \"pnpm --filter ./apps/api dev\" \"pnpm --filter ./apps/web dev\"",
    "build": "pnpm -w run build:all",
    "build:all": "pnpm --filter ./packages/shared build && pnpm --filter ./apps/api build && pnpm --filter ./apps/web build",
    "test:unit": "vitest --run --coverage",
    "test:api": "pnpm --filter ./apps/api test",
    "e2e": "playwright test",
    "e2e:ci": "playwright test --reporter=list,junit",
    "seed": "tsx apps/api/src/data/seed.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.4.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}